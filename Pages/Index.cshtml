@page
@using System.Text.Json
@model PlantsInformationWeb.Pages.Index
@{
    ViewData["Title"] = "Login Page";
}
@{
    int maxLength = 95;
    string GetShortDescription(string desc, int length)
    {
        if (string.IsNullOrEmpty(desc)) return "";
        if (desc.Length <= length) return desc;
        int lastSpace = desc.LastIndexOf(' ', length);
        if (lastSpace > 0)
            return desc.Substring(0, lastSpace) + "...";
        else
            return desc.Substring(0, length) + "...";
    }
}

<script>
    var isUserLoggedIn = @(User.Identity.IsAuthenticated.ToString().ToLower());
</script>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Plant Lookup - Plant Information Database</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
</head>

<body>
    <section class="hero-section">
        <div class="hero-overlay">
            <div class="container">
                <div class="row justify-content-center text-center">
                    <div class="col-lg-8">
                        <h1 class="display-4 fw-bold text-white mb-4">Discover the World of Plants</h1>
                        <p class="lead text-white mb-5">Search through thousands of plant species and learn about their
                            care, origins, and uses</p>
                        <form method="get" asp-page="/Plants" class="search-box-large mb-4">
                            <div class="input-group input-group-lg">
                                <input type="text" class="form-control" name="keyword"
                                    placeholder="Search by plant name or scientific name..." id="heroSearch">
                                <button class="btn btn-success" type="submit">
                                    <i class="bi bi-search"></i> Search
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center mb-5">
                    <h2 class="display-6 fw-bold text-success">Featured Plants</h2>
                    <p class="lead text-muted">Discover some of our most popular plant species</p>
                </div>
            </div>

            <div class="row g-4" id="featuredPlants">
                @if (Model.Plants != null && Model.Plants.Any())
                {
                    foreach (var plant in Model.Plants)
                    {
                        <div class="col-md-6 col-lg-3 mb-4">
                            <div class="card plant-card h-100" data-bs-toggle="tooltip" title="@GetShortDescription(plant.Description, maxLength)">
                                <img src="@plant.ThumbnailUrl" class="card-img-top" alt="@plant.PlantName">
                                <div class="card-body">
                                    <h5 class="card-title">@plant.PlantName</h5>
                                    <p class="scientific-name">@plant.ScientificName</p>
                                    <div class="plant-badges mb-3">
                                        <span class="badge bg-success me-1">@plant.CategoryName</span>
                                    </div>
                                    <button class="btn btn-outline-success btn-sm w-100 view-detail-btn"
                                        data-plant-id="@plant.PlantId">
                                        <i class="bi bi-eye me-2"></i>View Details
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 text-center">
                        <p class="text-muted">No plants found.</p>
                    </div>
                }
            </div>

            <div class="text-center mt-5">
                <a asp-page="/Plants" class="btn btn-success btn-lg">
                    <i class="bi bi-arrow-right"></i> View All Plants
                </a>
            </div>
        </div>
    </section>

    <section class="bg-light py-5">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-3 mb-4">
                    <div class="stat-item">
                        <i class="bi bi-flower1 text-success display-4 mb-3"></i>
                        <h3 class="fw-bold">2,500+</h3>
                        <p class="text-muted">Plant Species</p>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="stat-item">
                        <i class="bi bi-globe text-success display-4 mb-3"></i>
                        <h3 class="fw-bold">150+</h3>
                        <p class="text-muted">Countries</p>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="stat-item">
                        <i class="bi bi-book text-success display-4 mb-3"></i>
                        <h3 class="fw-bold">500+</h3>
                        <p class="text-muted">Care Guides</p>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="stat-item">
                        <i class="bi bi-people text-success display-4 mb-3"></i>
                        <h3 class="fw-bold">10,000+</h3>
                        <p class="text-muted">Users</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/@@eonasdan/tempus-dominus@6.7.19/dist/js/tempus-dominus.min.js"></script>

    <script src="~/js/script.js"></script>

    <!-- Popup for login required -->
    <div id="loginPopup" class="custom-modal-backdrop" style="display:none;">
        <div class="custom-modal-dialog">
            <div class="custom-modal-header">
                <h5><i class="bi bi-person-lock me-2 text-danger"></i> Login Required</h5>
                <button type="button" class="custom-modal-close" onclick="closeLoginPopup()">&times;</button>
            </div>
            <div class="custom-modal-body">
                <p class="mb-2">You need to log in to view plant details.</p>
                <p class="text-muted small">Please log in with your account to continue.</p>
            </div>
            <div class="custom-modal-footer">
                <a id="loginPopupLink" href="/Account/Login" class="btn btn-success px-4">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Log In
                </a>
                <button type="button" class="btn btn-outline-secondary px-4" onclick="closeLoginPopup()">Close</button>
            </div>
        </div>
    </div>

    <script>
        function closeLoginPopup() {
            document.getElementById("loginPopup").style.display = "none";
        }
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".view-detail-btn").forEach(function (btn) {
                btn.addEventListener("click", function (e) {
                    e.preventDefault();
                    var plantId = btn.getAttribute("data-plant-id");
                    if (isUserLoggedIn) {
                        window.location.href = "/PlantDetail?id=" + plantId;
                    } else {
                        var loginLink = document.getElementById("loginPopupLink");
                        loginLink.href = "/Account/Login?returnUrl=" + encodeURIComponent("/PlantDetail?id=" + plantId);
                        document.getElementById("loginPopup").style.display = "flex";
                    }
                });
            });
        });

    </script>
    @await Html.PartialAsync("_Chatbox")
    <script>
        window.currentSessionId = '@User.FindFirst("chat_session_id")?.Value';
    </script>
    <link href="~/css/chatbox.css" rel="stylesheet" />
    <script src="~/js/chatbox.js"></script>
</body>

</html>