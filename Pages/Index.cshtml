@page
@using System.Text.Json
@model PlantsInformationWeb.Pages.Index
@{
    ViewData["Title"] = "Login Page";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Plant Lookup - Plant Information Database</title>
    <link href="~/css/style.css" rel="stylesheet">
</head>

<body>
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-overlay">
            <div class="container">
                <div class="row justify-content-center text-center">
                    <div class="col-lg-8">
                        <h1 class="display-4 fw-bold text-white mb-4">Discover the World of Plants</h1>
                        <p class="lead text-white mb-5">Search through thousands of plant species and learn about their
                            care, origins, and uses</p>

                        <!-- Large Search Box -->
                        <div class="search-box-large mb-4">
                            <div class="input-group input-group-lg">
                                <input type="text" class="form-control"
                                    placeholder="Search by plant name or scientific name..." id="heroSearch">
                                <button class="btn btn-success" type="button">
                                    <i class="bi bi-search"></i> Search
                                </button>
                            </div>
                        </div>

                        <!-- Quick Filter Buttons -->
                        <div class="quick-filters">
                            <h5 class="text-white mb-3">Quick Filters:</h5>
                            <div class="d-flex flex-wrap justify-content-center gap-2">
                                <button class="btn btn-outline-light filter-btn" data-bs-toggle="tooltip"
                                    title="Filter by plant category" data-filter="category">
                                    <i class="bi bi-grid"></i> Category
                                </button>
                                <button class="btn btn-outline-light filter-btn" data-bs-toggle="tooltip"
                                    title="Filter by climate requirements" data-filter="climate">
                                    <i class="bi bi-thermometer-sun"></i> Climate
                                </button>
                                <button class="btn btn-outline-light filter-btn" data-bs-toggle="tooltip"
                                    title="Filter by soil type" data-filter="soil">
                                    <i class="bi bi-moisture"></i> Soil
                                </button>
                                <button class="btn btn-outline-light filter-btn" data-bs-toggle="tooltip"
                                    title="Filter by geographic region" data-filter="region">
                                    <i class="bi bi-geo-alt"></i> Region
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Featured Plants Section -->
    <section class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center mb-5">
                    <h2 class="display-6 fw-bold text-success">Featured Plants</h2>
                    <p class="lead text-muted">Discover some of our most popular plant species</p>
                </div>
            </div>

            <div class="row g-4" id="featuredPlants">
                @if (Model.Plants != null && Model.Plants.Any())
                {
                    foreach (var plant in Model.Plants)
                    {
                        <div class="col-md-6 col-lg-4 mb-4" >
                            <div class="card plant-card h-100" data-bs-toggle="tooltip" title="@plant.Description">
                                <img src="@plant.ThumbnailUrl" class="card-img-top" alt="@plant.PlantName">
                                <div class="card-body">
                                    <h5 class="card-title">@plant.PlantName</h5>
                                    <p class="scientific-name">@plant.ScientificName</p>
                                    <div class="plant-badges mb-3">
                                        <span class="badge bg-success me-1">@plant.CategoryName</span> 
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 text-center">
                        <p class="text-muted">No plants found.</p>
                    </div>
                }
            </div>

            <div class="text-center mt-5">
                <a asp-page="/Plants" class="btn btn-success btn-lg">
                    <i class="bi bi-arrow-right"></i> View All Plants
                </a>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="bg-light py-5">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-3 mb-4">
                    <div class="stat-item">
                        <i class="bi bi-flower1 text-success display-4 mb-3"></i>
                        <h3 class="fw-bold">2,500+</h3>
                        <p class="text-muted">Plant Species</p>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="stat-item">
                        <i class="bi bi-globe text-success display-4 mb-3"></i>
                        <h3 class="fw-bold">150+</h3>
                        <p class="text-muted">Countries</p>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="stat-item">
                        <i class="bi bi-book text-success display-4 mb-3"></i>
                        <h3 class="fw-bold">500+</h3>
                        <p class="text-muted">Care Guides</p>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="stat-item">
                        <i class="bi bi-people text-success display-4 mb-3"></i>
                        <h3 class="fw-bold">10,000+</h3>
                        <p class="text-muted">Users</p>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <!-- Bootstrap Bundle (includes Popper) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>  
    <!-- Tempus Dominus -->
    <script src="https://cdn.jsdelivr.net/npm/@@eonasdan/tempus-dominus@6.7.19/dist/js/tempus-dominus.min.js"></script>

    <!-- Custom JS -->
    <script src="~/js/script.js"></script>
</body>

</html>