@page
@model PlantsInformationWeb.Pages.Admin.SoilManagement
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "admin")]
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Soil Management";
}

<!-- Soil Management Section -->
<div id="soil-section" class="content-section">
    <div
        class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2 text-success">Soil Management</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <button type="button" class="btn btn-success btn-sm me-2" data-bs-toggle="modal"
                data-bs-target="#addSoilModal">
                <i class="bi bi-plus-circle me-1"></i>Add soil
            </button>
        </div>
    </div>

    <!-- Soil Filters -->
    <form method="get" class="row mb-3">
        <div class="col-md-4">
            <input type="text" name="search" id="soilSearch" value="@Request.Query["search"]" class="form-control" placeholder="Search soil..." />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-success">Search</button>
        </div>
    </form>

    <!-- Soil Table -->
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="soilTable">
                    <thead>
                        <tr>
                            <th data-bs-toggle="tooltip" title="Click to sort">Soil ID</th>
                            <th data-bs-toggle="tooltip" title="Click to sort">Soil Name</th>
                            <th data-bs-toggle="tooltip" title="Click to sort">PH Range</th>
                            <th data-bs-toggle="tooltip" title="Click to sort">Fertility Level</th>
                            <th data-bs-toggle="tooltip" title="Click to sort">Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var soil in Model.Soiltypes)
                        {
                            <tr>
                                <td>@soil.SoilId</td>
                                <td>@soil.SoilName</td>
                                <td>@soil.PhRange</td>
                                <td>@soil.FertilityLevel</td>
                                <td>
                                    <me>
                                        <span class="badge bg-success">@soil.Description</span>
                                    </me>
                                </td>
                                <td>
                                    @* <button class="btn btn-sm btn-outline-primary" data-bs-toggle="tooltip"
                                        title="Edit Plant">
                                        <i class="bi bi-pencil"></i>
                                    </button> *@
                                    <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal"
                                        data-bs-target="#editSoilModal" data-soil-id="@soil.SoilId"
                                        data-soil-name="@soil.SoilName" data-soil-fertility="@soil.FertilityLevel" data-soil-ph="@soil.PhRange"
                                        data-soil-description="@soil.Description" title="Edit Soil">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <form method="post" asp-page-handler="DeleteSoil"
                                        asp-route-id="@soil.SoilId" class="d-inline"
                                        onsubmit="return confirm('Are you sure you want to delete this soil?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete Soil">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @await Html.PartialAsync("_Pagination", Model.Soiltypes, new ViewDataDictionary(ViewData) {
                    { "RouteName", "/Admin/SoilManagement" }
                })
            </div>
        </div>
    </div>
</div>


<!-- Add Soil Modal -->
<div class="modal fade" id="addSoilModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New Soil Type</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form method="post" asp-page-handler="AddSoil">
                    <div class="mb-3">
                        <label class="form-label">Soil Name</label>
                        <input type="text" class="form-control" asp-for="NewSoil.SoilName" required />
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">PH Range</label>
                                <input type="text" class="form-control" asp-for="NewSoil.PhRange"
                                    placeholder="e.g. 5.5 - 7.0" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Fertility Level</label>
                                <select class="form-select" asp-for="NewSoil.FertilityLevel" required>
                                    <option value="">Select Fertility</option>
                                    <option value="Low">Low</option>
                                    <option value="Medium">Medium</option>
                                    <option value="High">High</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" asp-for="NewSoil.Description" rows="3" required></textarea>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-success">Add Soil</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Edit Soil Modal -->
<div class="modal fade" id="editSoilModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form method="post" asp-page-handler="EditSoil">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Soil Type</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" asp-for="EditSoil.SoilId" id="editSoilId" />

                    <div class="mb-3">
                        <label class="form-label">Soil Name</label>
                        <input type="text" class="form-control" asp-for="EditSoil.SoilName" id="editSoilName" required />
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">PH Range</label>
                                <input type="text" class="form-control" asp-for="EditSoil.PhRange" id="editPhRange"
                                    placeholder="e.g. 5.5 - 7.0" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Fertility Level</label>
                                <select class="form-select" asp-for="EditSoil.FertilityLevel" id="editFertilityLevel" required>
                                    <option value="">Select Fertility</option>
                                    <option value="Low">Low</option>
                                    <option value="Medium">Medium</option>
                                    <option value="High">High</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" asp-for="EditSoil.Description" id="editDescription" rows="3" required></textarea>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    const editSoilModal = document.getElementById('editSoilModal');
    editSoilModal.addEventListener('show.bs.modal', function (event) {
        const button = event.relatedTarget;

        const id = button.getAttribute('data-soil-id');
        const name = button.getAttribute('data-soil-name');
        const ph = button.getAttribute('data-soil-ph');
        const fertility = button.getAttribute('data-soil-fertility');
        const description = button.getAttribute('data-soil-description');

        document.getElementById('editSoilId').value = id;
        document.getElementById('editSoilName').value = name;
        document.getElementById('editPhRange').value = ph;
        document.getElementById('editFertilityLevel').value = fertility;
        document.getElementById('editDescription').value = description;
    });
</script>
