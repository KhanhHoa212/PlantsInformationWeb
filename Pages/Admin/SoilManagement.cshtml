@page
@model PlantsInformationWeb.Pages.Admin.SoilManagement
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "admin")]
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Soil Management";
}

<!-- Soil Management Section -->
<div id="soil-section" class="content-section">
    <div
        class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2 text-success">Soil Management</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <button type="button" class="btn btn-success btn-sm me-2" data-bs-toggle="modal"
                data-bs-target="#addSoilModal">
                <i class="bi bi-plus-circle me-1"></i>Add soil
            </button>
        </div>
    </div>

    <!-- Soil Filters -->
    <form method="get" class="row mb-3">
        <div class="col-md-4">
            <input type="text" name="search" id="soilSearch" value="@Request.Query["search"]" class="form-control" placeholder="Search soil..." />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-success">Search</button>
        </div>
    </form>

    <!-- Soil Table -->
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="soilTable">
                    <thead>
                        <tr>
                            <th data-bs-toggle="tooltip" title="Click to sort">Soil ID</th>
                            <th data-bs-toggle="tooltip" title="Click to sort">Soil Name</th>
                            <th data-bs-toggle="tooltip" title="Click to sort" class="text-center">PH Range</th>
                            <th data-bs-toggle="tooltip" title="Click to sort" class="text-center">Fertility Level</th>
                            <th data-bs-toggle="tooltip" title="Click to sort">Description</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var soil in Model.Soiltypes)
                        {
                            <tr>
                                <td>@soil.SoilId</td>
                                <td>@soil.SoilName</td>
                                <td class="text-center">@soil.PhRange</td>
                                <td class="text-center">@soil.FertilityLevel</td>
                                <td>
                                    <me>
                                        <span>@soil.Description</span>
                                    </me>
                                </td>
                                <td class="text-center">
                                    <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal"
                                        data-bs-target="#editSoilModal" data-soil-id="@soil.SoilId"
                                        data-soil-name="@soil.SoilName" data-soil-fertility="@soil.FertilityLevel" data-soil-ph="@soil.PhRange"
                                        data-soil-description="@soil.Description" title="Edit Soil">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <form method="post" asp-page-handler="DeleteSoil"
                                        asp-route-id="@soil.SoilId" class="d-inline"
                                        id="delete-soil-form-@soil.SoilId">
                                        <input type="hidden" name="pageIndex" value="@Request.Query["pageIndex"]" />
                                        <button type="button" class="btn btn-sm btn-outline-danger"
                                            onclick="handleDeleteSoil(@soil.SoilId, '@soil.SoilName')"
                                            title="Delete Soil">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @await Html.PartialAsync("_Pagination", Model.Soiltypes, new ViewDataDictionary(ViewData) {
                    { "RouteName", "/Admin/SoilManagement" }
                })
            </div>
        </div>
    </div>
</div>


<!-- Add Soil Modal -->
<div class="modal fade" id="addSoilModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New Soil Type</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form method="post" asp-page-handler="AddSoil">
                <input type="hidden" name="pageIndex" value="@Request.Query["pageIndex"]" />
                    <div class="mb-3">
                        <label class="form-label">Soil Name</label>
                        <input type="text" class="form-control" asp-for="NewSoil.SoilName" required />
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">PH Range</label>
                                <input type="text" class="form-control" asp-for="NewSoil.PhRange"
                                    placeholder="e.g. 5.5 - 7.0" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Fertility Level</label>
                                <select class="form-select" asp-for="NewSoil.FertilityLevel" required>
                                    <option value="">Select Fertility</option>
                                    <option value="Low">Low</option>
                                    <option value="Medium">Medium</option>
                                    <option value="High">High</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" asp-for="NewSoil.Description" rows="3" required></textarea>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-success">Add Soil</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Edit Soil Modal -->
<div class="modal fade" id="editSoilModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form method="post" asp-page-handler="EditSoil">
            <input type="hidden" name="pageIndex" value="@Request.Query["pageIndex"]" />
                <div class="modal-header">
                    <h5 class="modal-title">Edit Soil Type</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" asp-for="EditSoil.SoilId" id="editSoilId" />

                    <div class="mb-3">
                        <label class="form-label">Soil Name</label>
                        <input type="text" class="form-control" asp-for="EditSoil.SoilName" id="editSoilName" required />
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">PH Range</label>
                                <input type="text" class="form-control" asp-for="EditSoil.PhRange" id="editPhRange"
                                    placeholder="e.g. 5.5 - 7.0" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Fertility Level</label>
                                <select class="form-select" asp-for="EditSoil.FertilityLevel" id="editFertilityLevel" required>
                                    <option value="">Select Fertility</option>
                                    <option value="Low">Low</option>
                                    <option value="Medium">Medium</option>
                                    <option value="High">High</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" asp-for="EditSoil.Description" id="editDescription" rows="3" required></textarea>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- Modal xác nhận xóa với theme cây trồng -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0" style="border-radius: 16px; box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);">
            <!-- Header với gradient xanh lá cây -->
            <div class="modal-header border-0" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%); border-radius: 16px 16px 0 0; padding: 24px;">
                <div class="d-flex align-items-center gap-3">
                    <div style="width: 48px; height: 48px; background: rgba(255, 255, 255, 0.2); border-radius: 12px; display: flex; align-items: center; justify-content: center;">
                        <i class="bi bi-exclamation-triangle-fill" style="font-size: 24px; color: white;"></i>
                    </div>
                    <h5 class="modal-title mb-0" style="color: white; font-weight: 600; font-size: 18px;">Xác nhận xóa danh mục</h5>
                </div>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            
            <div class="modal-body" style="padding: 28px;">
                <p style="margin-bottom: 12px; color: #1f2937; font-size: 15px;">
                    Bạn có chắc chắn muốn xóa danh mục <strong style="color: #059669;" id="deleteName"></strong>?
                </p>
                <p style="margin: 0; color: #6b7280; font-size: 13px; line-height: 1.5;">
                    <i class="bi bi-info-circle me-2" style="color: #10b981;"></i>
                    Hành động này không thể hoàn tác. Vui lòng cân nhắc kỹ trước khi xóa.
                </p>
            </div>
            
            <div class="modal-footer border-top" style="border-top-color: #e5e7eb !important; padding: 16px 28px; gap: 12px;">
                <button type="button" class="btn" data-bs-dismiss="modal" style="background-color: #f3f4f6; color: #374151; border: none; border-radius: 8px; padding: 8px 20px; font-weight: 500; transition: all 0.2s;">Hủy</button>
                <button type="button" class="btn" id="confirmDeleteBtn" style="background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%); color: white; border: none; border-radius: 8px; padding: 8px 20px; font-weight: 500; transition: all 0.2s;" onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 10px 20px rgba(239, 68, 68, 0.3)';" onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='none';">Xóa</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal hiển thị lỗi khi có cây liên kết -->
<div class="modal fade" id="deleteErrorModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0" style="border-radius: 16px; box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);">      
            <div class="modal-header border-0" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%); border-radius: 16px 16px 0 0; padding: 24px;">
                <div class="d-flex align-items-center gap-3">
                    <div style="width: 48px; height: 48px; background: rgba(255, 255, 255, 0.2); border-radius: 12px; display: flex; align-items: center; justify-content: center;">
                        <i class="bi bi-info-circle-fill" style="font-size: 24px; color: white;"></i>
                    </div>
                    <h5 class="modal-title mb-0" style="color: white; font-weight: 600; font-size: 18px;">Không thể xóa danh mục</h5>
                </div>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            
            <div class="modal-body" style="padding: 28px;">
                <p style="margin-bottom: 16px; color: #1f2937; font-size: 15px; font-weight: 500;">
                    Danh mục này đang được sử dụng bởi các cây sau:
                </p>
                
                <div style="max-height: 320px; overflow-y: auto; border-radius: 12px; background-color: #f0f9ff; padding: 12px; border: 1px solid #cffafe;">
                    <ul id="linkedPlantsList" style="list-style: none; padding: 0; margin: 0;">
                        <!-- Danh sách cây sẽ được thêm vào đây -->
                    </ul>
                </div>
                
                <div style="margin-top: 16px; padding: 12px 14px; background-color: #ecfdf5; border-left: 4px solid #10b981; border-radius: 6px;">
                    <p style="margin: 0; color: #047857; font-size: 13px; line-height: 1.5;">
                        <i class="bi bi-lightbulb me-2"></i>
                        <strong>Gợi ý:</strong> Vui lòng cập nhật loại cây cho các cây này trước khi xóa danh mục.
                    </p>
                </div>
            </div>
            
            <div class="modal-footer border-top" style="border-top-color: #e5e7eb !important; padding: 16px 28px;">
                <button type="button" class="btn" data-bs-dismiss="modal" style="background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%); color: white; border: none; border-radius: 8px; padding: 8px 20px; font-weight: 500; transition: all 0.2s;" onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 10px 20px rgba(6, 182, 212, 0.3)';" onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='none';">Đã hiểu</button>
            </div>
        </div>
    </div>
</div>

<!-- CSS cho danh sách cây -->
<style>
    #linkedPlantsList li {
        padding: 10px 12px;
        margin-bottom: 8px;
        background-color: white;
        border-left: 3px solid #10b981;
        border-radius: 6px;
        color: #1f2937;
        font-size: 14px;
        transition: all 0.2s ease;
    }
    
    #linkedPlantsList li:hover {
        background-color: #f0fdf4;
        transform: translateX(4px);
        box-shadow: 0 2px 8px rgba(16, 185, 129, 0.1);
    }
    
    #linkedPlantsList li:last-child {
        margin-bottom: 0;
    }
    
    /* Scrollbar custom */
    #deleteErrorModal .modal-body > div::-webkit-scrollbar {
        width: 6px;
    }
    
    #deleteErrorModal .modal-body > div::-webkit-scrollbar-track {
        background: #e0f2fe;
        border-radius: 10px;
    }
    
    #deleteErrorModal .modal-body > div::-webkit-scrollbar-thumb {
        background: #06b6d4;
        border-radius: 10px;
    }
    
    #deleteErrorModal .modal-body > div::-webkit-scrollbar-thumb:hover {
        background: #0891b2;
    }
</style>

<script>
    const editSoilModal = document.getElementById('editSoilModal');
    editSoilModal.addEventListener('show.bs.modal', function (event) {
        const button = event.relatedTarget;

        const id = button.getAttribute('data-soil-id');
        const name = button.getAttribute('data-soil-name');
        const ph = button.getAttribute('data-soil-ph');
        const fertility = button.getAttribute('data-soil-fertility');
        const description = button.getAttribute('data-soil-description');

        document.getElementById('editSoilId').value = id;
        document.getElementById('editSoilName').value = name;
        document.getElementById('editPhRange').value = ph;
        document.getElementById('editFertilityLevel').value = fertility;
        document.getElementById('editDescription').value = description;
    });

    let pendingDeleteId = null;


     function handleDeleteSoil (id, name) {
        pendingDeleteId = id;
        showConfirmModal(name, function () {
            // Người dùng xác nhận trong modal: submit form truyền thống
            var form = document.getElementById('delete-soil-form-' + id);
            if (form) form.submit();
        });
    } 
</script>
