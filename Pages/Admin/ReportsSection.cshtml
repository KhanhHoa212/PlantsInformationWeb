@page
@model PlantsInformationWeb.Pages.Admin.ReportsSectionModel
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "admin")]
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Reports Management";
}

<!-- Reports Section -->
<div id="reports-section" class="content-section">
    <div
        class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2 text-success">Reports & Data Export</h1>
    </div>

    <!-- Report Filters -->
    <div class="card shadow-sm mb-4">
        <div class="card-header">
            <h5 class="mb-0">Report Filters</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <label class="form-label">Start Date</label>
                    <div class="input-group" id="startDatePicker" data-td-target-input="nearest"
                        data-td-target-toggle="nearest">
                        <input id="startDate" type="text" class="form-control" data-td-target="#startDatePicker" />
                        <span class="input-group-text" data-td-target="#startDatePicker"
                            data-td-toggle="datetimepicker">
                            <i class="bi bi-calendar"></i>
                        </span>
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="form-label">End Date</label>
                    <div class="input-group" id="endDatePicker" data-td-target-input="nearest"
                        data-td-target-toggle="nearest">
                        <input id="endDate" type="text" class="form-control" data-td-target="#endDatePicker" />
                        <span class="input-group-text" data-td-target="#endDatePicker" data-td-toggle="datetimepicker">
                            <i class="bi bi-calendar"></i>
                        </span>
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Category</label>
                    <select class="form-select" id="reportCategory">
                        <option value="">All Categories</option>
                        <option value="flowering">Flowering Plants</option>
                        <option value="trees">Trees</option>
                        <option value="herbs">Herbs</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Climate</label>
                    <select class="form-select" id="reportClimate">
                        <option value="">All Climates</option>
                        <option value="tropical">Tropical</option>
                        <option value="temperate">Temperate</option>
                        <option value="arid">Arid</option>
                    </select>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-12">
                    <button type="button" class="btn btn-success me-2" id="generateReport">
                        <i class="bi bi-graph-up me-1"></i>Generate Report
                    </button>
                    <form method="post" asp-page-handler="ExportPdf">
                        <button type="submit" class="btn btn-outline-success" id="exportPDF">
                            <i class="bi bi-file-pdf me-1"></i>Export PDF
                        </button>
                    </form>
                    <form method="post" asp-page-handler="ExportCsv">
                        <button type="submit" class="btn btn-outline-success" id="exportCSV">
                            <i class="bi bi-file-earmark-spreadsheet me-1"></i>Export CSV
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Report Preview -->
    <div class="card shadow-sm">
        <div class="card-header">
            <h5 class="mb-0">Report Preview</h5>
        </div>
        <div class="card-body">
            <canvas id="reportChart"></canvas>
        </div>
    </div>
</div>
</main>
</div>
</div>