@page
@model PlantsInformationWeb.Pages.Admin.ClimateManagement
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "admin")]
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Climate Management";
}

<!-- Climate Management Section -->
<div id="climates-section" class="content-section">
    <div
        class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2 text-success">Climates Management</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <button type="button" class="btn btn-success btn-sm me-2" data-bs-toggle="modal"
                data-bs-target="#addClimatesModal">
                <i class="bi bi-plus-circle me-1"></i>Add Climate
            </button>
        </div>
    </div>

    <!-- Climate Filters -->
    <form method="get" class="row mb-3">
        <div class="col-md-4">
            <input type="text" name="search" id="climateSearch" value="@Request.Query["search"]" class="form-control" placeholder="Search climate..." />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-success">Search</button>
        </div>
    </form>

    <!-- Climate Table -->
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="climatesTable">
                    <thead>
                        <tr>
                            <th data-bs-toggle="tooltip" title="Click to sort">Climate ID</th>
                            <th data-bs-toggle="tooltip" title="Click to sort">Climate Name</th>
                            <th data-bs-toggle="tooltip" title="Click to sort">Temperature Range</th>
                            <th data-bs-toggle="tooltip" title="Click to sort">Rainfall Range</th>
                            <th data-bs-toggle="tooltip" title="Click to sort">Humidity Range</th>
                            <th data-bs-toggle="tooltip" title="Click to sort">Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var climate in Model.Climates)
                        {
                            <tr>
                                <td>@climate.ClimateId</td>
                                <td>@climate.ClimateName</td>
                                <td>@climate.TemperatureRange</td>
                                <td>@climate.RainfallRange</td>
                                <td>@climate.HumidityRange</td>
                                <td>
                                    <span class="badge bg-success">@climate.Description</span>
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal"
                                        data-bs-target="#editClimateModal" data-climate-id="@climate.ClimateId"
                                        data-climate-name="@climate.ClimateName"
                                        data-temperature="@climate.TemperatureRange" data-rainfall="@climate.RainfallRange"
                                        data-humidity="@climate.HumidityRange" data-description="@climate.Description"
                                        title="Edit Climate">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <form method="post" asp-page-handler="DeleteClimate"
                                        asp-route-id="@climate.ClimateId" class="d-inline"
                                        onsubmit="return confirm('Are you sure you want to delete this climate?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete Climate">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @await Html.PartialAsync("_Pagination", Model.Climates, new ViewDataDictionary(ViewData) {
                    { "RouteName", "/Admin/ClimateManagement" }
                })
            </div>
        </div>
    </div>
</div>

<!-- Add Climate Modal -->
<div class="modal fade" id="addClimatesModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form method="post" asp-page-handler="AddClimate">
                <div class="modal-header">
                    <h5 class="modal-title">Add New Climate</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Climate Name</label>
                        <input type="text" class="form-control" asp-for="NewClimate.ClimateName" required />
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label">Temperature Range</label>
                                <input type="text" class="form-control" asp-for="NewClimate.TemperatureRange"
                                    placeholder="e.g. 20째C - 35째C" required />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label">Rainfall Range</label>
                                <input type="text" class="form-control" asp-for="NewClimate.RainfallRange"
                                    placeholder="e.g. 800mm - 1200mm" required />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label">Humidity Range</label>
                                <input type="text" class="form-control" asp-for="NewClimate.HumidityRange"
                                    placeholder="e.g. 60% - 80%" required />
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" asp-for="NewClimate.Description" rows="3" required></textarea>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Add Climate</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Climate Modal -->
<div class="modal fade" id="editClimateModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form method="post" asp-page-handler="EditClimate">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Climate</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" asp-for="EditClimate.ClimateId" id="editClimateId" />

                    <div class="mb-3">
                        <label class="form-label">Climate Name</label>
                        <input type="text" class="form-control" asp-for="EditClimate.ClimateName" id="editClimateName"
                            required />
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label">Temperature Range</label>
                                <input type="text" class="form-control" asp-for="EditClimate.TemperatureRange"
                                    id="editTemperatureRange" placeholder="e.g. 20째C - 35째C" required />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label">Rainfall Range</label>
                                <input type="text" class="form-control" asp-for="EditClimate.RainfallRange"
                                    id="editRainfallRange" placeholder="e.g. 800mm - 1200mm" required />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label">Humidity Range</label>
                                <input type="text" class="form-control" asp-for="EditClimate.HumidityRange"
                                    id="editHumidityRange" placeholder="e.g. 60% - 80%" required />
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" asp-for="EditClimate.Description" id="editClimateDescription"
                            rows="3" required></textarea>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    const editClimateModal = document.getElementById('editClimateModal');
    editClimateModal.addEventListener('show.bs.modal', function (event) {
        const button = event.relatedTarget;

        document.getElementById('editClimateId').value = button.getAttribute('data-climate-id');
        document.getElementById('editClimateName').value = button.getAttribute('data-climate-name');
        document.getElementById('editTemperatureRange').value = button.getAttribute('data-temperature');
        document.getElementById('editRainfallRange').value = button.getAttribute('data-rainfall');
        document.getElementById('editHumidityRange').value = button.getAttribute('data-humidity');
        document.getElementById('editClimateDescription').value = button.getAttribute('data-description');
    });
</script>
