@page
@model PlantsInformationWeb.Pages.Admin.UserManagement
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "admin")]
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "User Management";
}

<!-- User Management Section -->
<div id="users-section" class="content-section">
    <div
        class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2 text-success">User Management</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <button type="button" class="btn btn-success btn-sm me-2" data-bs-toggle="modal"
                data-bs-target="#addUserModal">
                <i class="bi bi-plus-circle me-1"></i>Add User
            </button>
        </div>
    </div>

    <!-- Filters -->
    <form method="get" class="row mb-3">
        <div class="col-md-4">
            <input type="text" name="search" id="userSearch" value="@Request.Query["search"]" class="form-control"
                placeholder="Search users..." />
        </div>
        <div class="col-md-3">
            @{
                var role = Request.Query["role"].ToString();
            }
            <select name="role" class="form-select" id="roleFilter">
                <option value="">All Roles</option>
                @if (role == "admin")
                {
                    <option value="admin" selected>Admin</option>
                }
                else
                {
                    <option value="admin">Admin</option>
                }
                @if (role == "user")
                {
                    <option value="user" selected>User</option>
                }
                else
                {
                    <option value="user">User</option>
                }
            </select>
        </div>
        <div class="col-md-3">
            @{
                var status = Request.Query["status"].ToString();
            }
            <select name="status" class="form-select" id="statusFilter">
                <option value="">All Status</option>
                @if (status == "active")
                {
                    <option value="active" selected>Active</option>
                }
                else
                {
                    <option value="active">Active</option>
                }
                @if (status == "inactive")
                {
                    <option value="inactive" selected>Inactive</option>
                }
                else
                {
                    <option value="inactive">Inactive</option>
                }
            </select>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-success">Search</button>
        </div>
    </form>

    <!-- Users Table -->
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="usersTable">
                    <thead>
                        <tr>
                            <th data-bs-toggle="tooltip" title="Click to sort">UserName <i
                                    class="bi bi-arrow-down-up"></i></th>
                            <th data-bs-toggle="tooltip" title="Click to sort">Email <i class="bi bi-arrow-down-up"></i>
                            </th>
                            <th data-bs-toggle="tooltip" title="Click to sort" class="text-center">Role <i
                                    class="bi bi-arrow-down-up"></i>
                            </th>
                            <th data-bs-toggle="tooltip" title="Click to sort" class="text-center">Status <i
                                    class="bi bi-arrow-down-up"></i></th>
                            <th data-bs-toggle="tooltip" title="Click to sort" class="text-center">Created at <i
                                    class="bi bi-arrow-down-up"></i></th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td>@user.Username</td>
                                <td>@user.Email</td>
                                <td>
                                    <span class="badge @(user.Role == "admin" ? "badge-admin" : "badge-user") ">
                                        @user.Role
                                    </span>
                                </td>
                                <td>
                                    <span class="badge @(user.Isactive == true ? "badge-active" : "badge-inactive")">
                                        @(user.Isactive == true ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td class="text-center">@user.CreatedAt?.ToString("yyyy-MM-dd")</td>

                                <td class="text-center">
                                    <form method="post" asp-page-handler="ToggleActive" asp-route-id="@user.UserId"
                                        class="d-inline"
                                        onsubmit="return confirm('@(user.Isactive == true? "Are you sure you want to lock this account?" : "Are you sure you want to unlock this account?")');">

                                        <button type="button"
                                            class="btn btn-sm @(user.Isactive == true ? "btn-outline-lock" : "btn-outline-unlock")"
                                            onclick="toggleUserActive('@user.UserId', this)"
                                            title="@(user.Isactive == true ? "Lock account" : "Unlock account")">

                                            <i class="bi @(user.Isactive == true ? "bi-lock" : "bi-unlock")"></i>
                                            @(user.Isactive == true ? "Lock" : "Unlock")
                                        </button>


                                    </form>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
                @await Html.PartialAsync("_Pagination", Model.Users, new ViewDataDictionary(ViewData) {
                { "RouteName", "/Admin/UserManagement" }
                                })
            </div>
        </div>
    </div>
</div>

<!-- Add User Modal -->
<div class="modal fade" id="addUserModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="addUserForm" method="post" asp-page-handler="AddUser">
                    <div class="mb-3">
                        <label class="form-label">User Name</label>
                        <input type="text" class="form-control" name="NewUser.Username" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" name="NewUser.Email" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Role</label>
                        <select class="form-select" name="NewUser.Role" required>
                            <option value="">Select Role</option>
                            <option value="admin">Admin</option>
                            <option value="user">User</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <input type="password" class="form-control" name="NewUser.Password" required>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-success">Add User</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

<script>
    function toggleUserActive(userId, btnElem) {
        const isLockAction = btnElem.innerText.includes("Lock");

        if (!confirm(isLockAction
            ? "Are you sure you want to lock this account?"
            : "Are you sure you want to unlock this account?")) {
            return;
        }

        fetch('/Admin/UserManagement?handler=ToggleActive', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
                'RequestVerificationToken': getAntiForgeryToken()
            },
            body: 'id=' + encodeURIComponent(userId)
        })
            .then(res => res.json())
            .then(data => {
                if (!data.success) {
                    showToast(data.message || 'Error!', 'error');
                    return;
                }

                const row = btnElem.closest('tr');
                const statusCell = row.querySelector('td:nth-child(4) span');

                if (data.newStatus === true) {
                    // ACTIVE → dùng badge tùy biến
                    statusCell.className = 'badge badge-active';
                    statusCell.textContent = 'Active';

                    btnElem.className = 'btn btn-sm btn-outline-lock';
                    btnElem.innerHTML = '<i class="bi bi-lock"></i> Lock';
                    btnElem.title = 'Lock account';
                } else {
                    // INACTIVE
                    statusCell.className = 'badge badge-inactive';
                    statusCell.textContent = 'Inactive';

                    btnElem.className = 'btn btn-sm btn-outline-unlock';
                    btnElem.innerHTML = '<i class="bi bi-unlock"></i> Unlock';
                    btnElem.title = 'Unlock account';
                }

                showToast(data.message || 'Account status updated.', 'success');
            })
            .catch(() => {
                showToast('Server error!', 'error');
            });
    }


    // Hàm lấy AntiForgeryToken của Razor Pages
    function getAntiForgeryToken() {
        const el = document.querySelector('input[name="__RequestVerificationToken"]');
        return el ? el.value : '';
    }
    document.addEventListener('DOMContentLoaded', function () {
        const addUserForm = document.getElementById('addUserForm');
        if (addUserForm) {
            addUserForm.addEventListener('submit', function (e) {
                e.preventDefault();

                // Lấy dữ liệu từ form
                const formData = new FormData(addUserForm);

                // Nếu dùng AntiForgeryToken, append vào formData
                const tokenEl = addUserForm.querySelector('input[name="__RequestVerificationToken"]');
                if (tokenEl) formData.append('__RequestVerificationToken', tokenEl.value);

                fetch('/Admin/UserManagement?handler=AddUser', {
                    method: 'POST',
                    body: formData
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            showToast(data.message || 'Add user successful.', 'success');

                            // Đóng modal
                            const modal = bootstrap.Modal.getOrCreateInstance(document.getElementById('addUserModal'));
                            modal.hide();

                            // Reset form
                            addUserForm.reset();

                            setTimeout(function () {
                                location.reload();
                            }, 1300);

                        } else {
                            showToast(data.message || 'Add user failed!', 'error');
                        }
                    })
                    .catch(() => {
                        showToast('Server error!', 'error');
                    });
            });
        }
    });
</script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>