<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Plant Information Lookup Admin</title>

    <!-- Bootstrap & các thư viện khác -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/@@eonasdan/tempus-dominus@6.7.7/dist/css/tempus-dominus.min.css"
        rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link href="~/css/admin-style.css" rel="stylesheet">

    @if (TempData["NotificationMessage"] != null)
    {
        <meta name="notify-type" content="@TempData["NotificationType"]" />
        <meta name="notify-message" content="@TempData["NotificationMessage"]" />
    }
</head>

<body>
    <!-- Top Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm fixed-top">
        <div class="container-fluid">
            <!-- Logo and Brand -->
            <a class="navbar-brand d-flex align-items-center" href="#">
                <i class="bi bi-flower1 text-success me-2 fs-4"></i>
                <span class="fw-bold text-success">Plant Lookup Admin</span>
            </a>

            <!-- Sidebar Toggle -->
            <button class="btn btn-outline-success d-lg-none" type="button" id="sidebarToggle">
                <i class="bi bi-list"></i>
            </button>

            <!-- Navigation Links -->
            <div class="navbar-nav ms-auto">
                <div class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button"
                        data-bs-toggle="dropdown">
                        <i class="bi bi-person-circle me-2"></i>
                        <span>Admin User</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i>Profile</a></li>
                        <li><a class="dropdown-item" asp-page="/Index"><i class="bi bi-house me-2"></i>Main Site</a>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li>
                            <form asp-page="/Account/Logout" method="post" style="display: inline;">
                                <button type="submit" class="dropdown-item text-danger"
                                    style="border: none; background: none;">
                                    <i class="bi bi-box-arrow-right me-2"></i>Logout
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-lg-2 d-lg-block sidebar collapse" id="sidebar">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/Dashboard") ? "active" : "")"
                                asp-page="/Admin/Dashboard" data-section="dashboard">
                                <i class="bi bi-speedometer2 me-2"></i>
                                Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Index") ? "active" : "")"
                                asp-page="/Index" id="homeLink">
                                <i class="bi bi-house me-2"></i>
                                Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/UserManagement") ? "active" : "")"
                                asp-page="/Admin/UserManagement" data-section="users">
                                <i class="bi bi-people me-2"></i>
                                User Management
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/PlantManagement") ? "active" : "")"
                                asp-page="/Admin/PlantManagement" data-section="plants">
                                <i class="bi bi-flower2 me-2"></i>
                                Plant Management
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/PlantCategoriesManagement") ? "active" : "")"
                                asp-page="/Admin/PlantCategoriesManagement" data-section="categories">
                                <i class="bi bi-tags me-2"></i>
                                Plant Categories
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/SoilManagement") ? "active" : "")"
                                asp-page="/Admin/SoilManagement" data-section="soil">
                                <i class="bi bi-tags me-2"></i>
                                Soil Types
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/RegionManagement") ? "active" : "")"
                                asp-page="/Admin/RegionManagement" data-section="regions">
                                <i class="bi bi-globe2 me-2"></i>
                                Regions
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/ClimateManagement") ? "active" : "")"
                                asp-page="/Admin/ClimateManagement" data-section="climates">
                                <i class="bi bi-brightness-high me-2"></i>
                                Climates
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/DiseasesManagement") ? "active" : "")"
                                asp-page="/Admin/DiseasesManagement" data-section="diseases">
                                <i class="bi bi-tags me-2"></i>
                                Plant Diseases
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/ReportsSection") ? "active" : "")"
                                asp-page="/Admin/ReportsSection" data-section="reports">
                                <i class="bi bi-graph-up me-2"></i>
                                Reports & Export
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
            <!-- Main Content -->
            <main class="col-lg-10 ms-sm-auto px-md-4 main-content">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Tempus Dominus JS -->
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@eonasdan/tempus-dominus@6.7.7/dist/js/tempus-dominus.min.js"></script>
    <!-- Custom JS -->
    <script src="~/js/admin-script.js"></script>
</body>

</html>