<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Plant Information Lookup Admin</title>

    <!-- Bootstrap & Libraries -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/@@eonasdan/tempus-dominus@6.7.7/dist/css/tempus-dominus.min.css"
        rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="~/css/admin-style.css" rel="stylesheet">
    <link href="~/css/admin-table.css" rel="stylesheet">

    @if (TempData["NotificationMessage"] != null)
    {
        <meta name="notify-type" content="@TempData["NotificationType"]" />
        <meta name="notify-message" content="@TempData["NotificationMessage"]" />
    }
</head>

<body>
    <!-- Top Navigation Bar -->
    <nav class="navbar">
        <div class="container-fluid d-flex align-items-center justify-content-between">
            <!-- Brand Section -->
            <a class="navbar-brand" href="/">
                <div class="brand-wrapper">
                    <div class="brand-icon">
                        <i class="bi bi-flower1"></i>
                    </div>
                    <div class="brand-text">
                        <div class="brand-title">Plant Lookup</div>
                        <div class="brand-subtitle">Admin</div>
                    </div>
                </div>
            </a>

            <!-- Sidebar Toggle (Mobile) -->
            <button class="navbar-toggler d-lg-none" type="button" id="sidebarToggle" aria-label="Toggle sidebar">
                <i class="bi bi-list"></i>
            </button>

            <!-- Navigation Links -->
            <div class="ms-auto d-flex align-items-center gap-2">
                <!-- User Dropdown -->
                <div class="dropdown">
                    <a class="user-dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                        aria-expanded="false">
                        <div class="user-avatar">
                            <i class="bi bi-person-fill"></i>
                        </div>
                        <span class="user-name d-none d-sm-inline">Admin User</span>
                        <i class="bi bi-chevron-down"></i>
                    </a>
                    <ul class="dropdown-menu user-dropdown-menu dropdown-menu-end">
                        <li class="dropdown-header">
                            <div class="dropdown-user-info">
                                <strong>Admin User</strong>
                                <br>
                                <small>Administrator</small>
                            </div>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-person"></i> Profile</a></li>
                        <li><a class="dropdown-item" asp-page="/Index"><i class="bi bi-house"></i> Main Site</a></li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li>
                            <form asp-page="/Account/Logout" method="get" style="display: inline;">
                                <button type="submit" class="dropdown-item text-danger"
                                    style="border: none; background: none; width: 100%; text-align: left;">
                                    <i class="bi bi-box-arrow-right"></i> Logout
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <!-- Admin Wrapper -->
    <div class="admin-wrapper">
        <!-- Sidebar -->
        <nav class="sidebar" id="sidebar">
            <div class="sidebar-content">
                <div class="sidebar-nav">
                    <ul class="nav flex-column">
                        <!-- Dashboard -->
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/Dashboard") ? "active" : "")"
                                asp-page="/Admin/Dashboard" data-section="dashboard">
                                <i class="bi bi-speedometer2"></i>
                                <span>Dashboard</span>
                            </a>
                        </li>

                        <!-- Home -->
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Index") ? "active" : "")"
                                asp-page="/Index" id="homeLink">
                                <i class="bi bi-house"></i>
                                <span>Home</span>
                            </a>
                        </li>

                        <!-- Divider -->
                        <div class="nav-divider">
                            <span>Management</span>
                        </div>

                        <!-- User Management -->
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/UserManagement") ? "active" : "")"
                                asp-page="/Admin/UserManagement" data-section="users">
                                <i class="bi bi-people"></i>
                                <span>User Management</span>
                            </a>
                        </li>

                        <!-- Plant Management -->
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/PlantManagement") ? "active" : "")"
                                asp-page="/Admin/PlantManagement" data-section="plants">
                                <i class="bi bi-flower2"></i>
                                <span>Plant Management</span>
                            </a>
                        </li>

                        <!-- Plant Categories -->
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/PlantCategoriesManagement") ? "active" : "")"
                                asp-page="/Admin/PlantCategoriesManagement" data-section="categories">
                                <i class="bi bi-tags"></i>
                                <span>Plant Categories</span>
                            </a>
                        </li>

                        <!-- Soil Types -->
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/SoilManagement") ? "active" : "")"
                                asp-page="/Admin/SoilManagement" data-section="soil">
                                <i class="bi bi-layers"></i>
                                <span>Soil Types</span>
                            </a>
                        </li>

                        <!-- Regions -->
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/RegionManagement") ? "active" : "")"
                                asp-page="/Admin/RegionManagement" data-section="regions">
                                <i class="bi bi-globe2"></i>
                                <span>Regions</span>
                            </a>
                        </li>

                        <!-- Climates -->
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/ClimateManagement") ? "active" : "")"
                                asp-page="/Admin/ClimateManagement" data-section="climates">
                                <i class="bi bi-brightness-high"></i>
                                <span>Climates</span>
                            </a>
                        </li>

                        <!-- Plant Diseases -->
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/DiseasesManagement") ? "active" : "")"
                                asp-page="/Admin/DiseasesManagement" data-section="diseases">
                                <i class="bi bi-exclamation-triangle"></i>
                                <span>Plant Diseases</span>
                            </a>
                        </li>

                        <!-- Divider -->
                        <div class="nav-divider">
                            <span>Analytics</span>
                        </div>

                        <!-- Reports & Export -->
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/ReportsSection") ? "active" : "")"
                                asp-page="/Admin/ReportsSection" data-section="reports">
                                <i class="bi bi-graph-up"></i>
                                <span>Reports & Export</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="main-content">
            <div class="content-wrapper">
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="~/js/admin-script.js"></script>
    

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Tempus Dominus JS -->
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@eonasdan/tempus-dominus@6.7.7/dist/js/tempus-dominus.min.js"></script>
    


</body>

</html>