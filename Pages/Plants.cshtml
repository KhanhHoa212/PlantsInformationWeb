@page
@using System.Text.Json
@model PlantsInformationWeb.Pages.Plants
@{
    ViewData["Title"] = "Plant Lookup";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Plant Database - Plant Lookup</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Tempus Dominus CSS -->
    <link href="https://cdn.jsdelivr.net/npm/@@eonasdan/tempus-dominus@6.10.4/dist/css/tempus-dominus.min.css"
        rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/style.css" />

</head>

<body>

    <!-- Page Header -->
    <section class="bg-light py-4">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
                            <li class="breadcrumb-item active">Plants</li>
                        </ol>
                    </nav>
                    <h1 class="display-6 fw-bold text-success">Plant Database</h1>
                    <p class="lead text-muted">Browse our comprehensive collection of plant species</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Main Content -->
    <section class="py-4">
        <div class="container">
            <div class="row">
                <!-- Sidebar Filters -->
                <div class="col-lg-3 mb-4">
                    <div class="card">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0"><i class="bi bi-funnel"></i> Filters</h5>
                        </div>
                        <div class="card-body">
                            <!-- Category Filter -->
                            <div class="mb-4">
                                <h6 class="fw-bold">Category</h6>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="flowers" id="catFlowers">
                                    <label class="form-check-label" for="catFlowers">Flowers</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="trees" id="catTrees">
                                    <label class="form-check-label" for="catTrees">Trees</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="herbs" id="catHerbs">
                                    <label class="form-check-label" for="catHerbs">Herbs</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="vegetables"
                                        id="catVegetables">
                                    <label class="form-check-label" for="catVegetables">Vegetables</label>
                                </div>
                            </div>

                            <!-- Climate Filter -->
                            <div class="mb-4">
                                <h6 class="fw-bold">Climate</h6>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="tropical" id="climTropical">
                                    <label class="form-check-label" for="climTropical">Tropical</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="temperate"
                                        id="climTemperate">
                                    <label class="form-check-label" for="climTemperate">Temperate</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="arid" id="climArid">
                                    <label class="form-check-label" for="climArid">Arid</label>
                                </div>
                            </div>

                            <!-- Soil Type Filter -->
                            <div class="mb-4">
                                <h6 class="fw-bold">Soil Type</h6>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="clay" id="soilClay">
                                    <label class="form-check-label" for="soilClay">Clay</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="sandy" id="soilSandy">
                                    <label class="form-check-label" for="soilSandy">Sandy</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="loamy" id="soilLoamy">
                                    <label class="form-check-label" for="soilLoamy">Loamy</label>
                                </div>
                            </div>

                            <!-- Planting Season -->
                            <div class="mb-4">
                                <h6 class="fw-bold">Planting Season</h6>
                                <div class="input-group" id="plantingSeasonPicker" data-td-target-input="nearest"
                                    data-td-target-toggle="nearest">
                                    <input id="plantingSeasonInput" type="text" class="form-control"
                                        data-td-target="#plantingSeasonPicker" placeholder="Select season" />
                                    <span class="input-group-text" data-td-target="#plantingSeasonPicker"
                                        data-td-toggle="datetimepicker">
                                        <i class="bi bi-calendar"></i>
                                    </span>
                                </div>
                            </div>

                            <button class="btn btn-success w-100 mb-2" id="applyFilters">Apply Filters</button>
                            <button class="btn btn-outline-secondary w-100" id="clearFilters">Clear All</button>
                        </div>
                    </div>
                </div>

                <!-- Plant List -->
                <div class="col-lg-9">
                    <!-- Sort and View Options -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div>
                            <span class="text-muted" id="resultsCount">Showing 1-12 of 2,500 plants</span>
                        </div>
                        <div class="d-flex gap-2">
                            <select class="form-select" style="width: auto;" id="sortSelect">
                                <option value="name-asc">Name (A-Z)</option>
                                <option value="name-desc">Name (Z-A)</option>
                                <option value="updated">Recently Updated</option>
                            </select>
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-outline-secondary active" id="gridView">
                                    <i class="bi bi-grid"></i>
                                </button>
                                <button type="button" class="btn btn-outline-secondary" id="listView">
                                    <i class="bi bi-list"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Plant Cards Grid -->
                    <div class="row g-4" id="plantGrid">
                        @if (Model.PlantsInfor != null && Model.PlantsInfor.Any())
                        {
                            foreach (var plant in Model.PlantsInfor)
                            {
                                <div class="col-md-6 col-lg-4 mb-4">
                                    <div class="card plant-card h-100" data-bs-toggle="tooltip" title="@plant.Description">
                                        <img src="@plant.ThumbnailUrl" class="card-img-top" alt="@plant.PlantName">
                                        <div class="card-body">
                                            <h5 class="card-title">@plant.PlantName</h5>
                                            <p class="scientific-name">@plant.ScientificName</p>
                                            <div class="plant-badges mb-3">
                                                <span class="badge bg-success me-1">@plant.CategoryName</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="col-12 text-center">
                                <p class="text-muted">No plants found.</p>
                            </div>
                        }
                    </div>

                    <!-- Pagination -->
                    <nav aria-label="Plant pagination" class="mt-5">
                        <ul class="pagination justify-content-center" id="pagination">
                            <!-- Pagination will be populated by JavaScript -->
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </section>
    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <!-- Tempus Dominus JS -->
    <script src="https://cdn.jsdelivr.net/npm/@@eonasdan/tempus-dominus@6.10.4/dist/js/tempus-dominus.min.js"></script>



    <!-- Custom JS -->
    <script src="~/js/plants.js"></script>
</body>

</html>