@page
@using System.Text.Json
@model PlantsInformationWeb.Pages.Plants
@{
    ViewData["Title"] = "Plant Lookup";
}

<script>
    var isUserLoggedIn = @(User.Identity.IsAuthenticated.ToString().ToLower());
</script>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Plant Database - Plant Lookup</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/@@eonasdan/tempus-dominus@6.10.4/dist/css/tempus-dominus.min.css"
        rel="stylesheet">
    <link rel="stylesheet" href="~/css/plants.css" />

</head>

<body>
    <section class="page-header">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
                            <li class="breadcrumb-item active">Plants</li>
                        </ol>
                    </nav>
                    <h1 class="display-6 fw-bold text-success mb-2">Plant Database</h1>
                    <p class="lead text-muted mb-0">Browse our comprehensive collection of plant species</p>
                </div>
            </div>
        </div>
    </section>
    <section class="py-5" style="background-color: #F5F5F5;">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 mb-4">
                    <div class="filters-sidebar">
                        <form method="get" asp-page="/Plants" id="filterForm">
                            <div class="filters-header">
                                <h5 class="mb-0"><i class="bi bi-funnel me-2"></i>Filters</h5>
                            </div>
                            <div class="filters-body">
                                <div class="filter-section">
                                    <button class="filter-section-header" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#categoryFilter" aria-expanded="true">
                                        <span><i class="bi bi-grid-3x3 me-2"></i>Category</span>
                                        <i class="bi bi-chevron-down"></i>
                                    </button>
                                    <div class="collapse show filter-section-content" id="categoryFilter">
                                        @foreach (var cat in Model.Categories)
                                        {
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" name="categoryIds"
                                                    value="@cat.CategoryId" id="cat@cat.CategoryId"
                                                    @(Request.Query["categoryIds"].Any(id => id == cat.CategoryId.ToString()) ? "checked" : "")
                                                                                                    ? "checked" : "")>
                                                <label class="form-check-label" for="cat@cat.CategoryId">
                                                    @cat.CategoryName
                                                </label>
                                            </div>
                                        }
                                    </div>
                                </div>

                                <div class="filter-section">
                                    <button class="filter-section-header" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#climateFilter" aria-expanded="true">
                                        <span><i class="bi bi-thermometer-sun me-2"></i>Climate</span>
                                        <i class="bi bi-chevron-down"></i>
                                    </button>
                                    <div class="collapse show filter-section-content" id="climateFilter">
                                        @foreach (var climate in Model.Climates)
                                        {
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" name="climateIds"
                                                    value="@climate.ClimateId" id="climate@climate.ClimateId"
                                                   @(Request.Query["climateIds"].Any(id => id == climate.ClimateId.ToString()) ? "checked" : "")
                                                                                                    ? "checked" : "")>
                                                <label class="form-check-label" for="climate@climate.ClimateId">
                                                    @climate.ClimateName
                                                </label>
                                            </div>
                                        }
                                    </div>
                                </div>

                                <div class="filter-section">
                                    <button class="filter-section-header" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#soilFilter" aria-expanded="true">
                                        <span><i class="bi bi-moisture me-2"></i>Soil Type</span>
                                        <i class="bi bi-chevron-down"></i>
                                    </button>
                                        <div class="collapse show filter-section-content" id="soilFilter">
                                            @foreach (var soil in Model.Soils)
                                            {
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" name="soilIds"
                                                        value="@soil.SoilId" id="soil@soil.SoilId"
                                                        @(Request.Query["soilIds"].Any(id => id == soil.SoilId.ToString()) ? "checked" : "")
                                                                                                        ? "checked" : "")>
                                                    <label class="form-check-label" for="soil@soil.SoilId">
                                                        @soil.SoilName
                                                    </label>
                                                </div>
                                            }
                                        </div>
                                </div>
                                <div class="filter-actions">
                                    <button class="btn btn-outline-secondary w-100" type="button" id="clearFilters">
                                        <i class="bi bi-x-circle me-2"></i>Clear All
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="col-lg-9">
                    <div class="controls-bar">
                        <div class="results-info">
                            <span class="text-muted" id="resultsCount">Showing 1-12 of 2,500 plants</span>
                        </div>
                        <div class="controls-actions">
                            <select class="form-select sort-select" id="sortSelect">
                                <option value="name-asc">Name (A-Z)</option>
                                <option value="name-desc">Name (Z-A)</option>
                                <option value="updated">Recently Updated</option>
                            </select>
                            <div class="btn-group view-toggle" role="group">
                                <button type="button" class="btn btn-outline-secondary active" id="gridView"
                                    data-bs-toggle="tooltip" title="Grid View">
                                    <i class="bi bi-grid-3x3"></i>
                                </button>
                                <button type="button" class="btn btn-outline-secondary" id="listView"
                                    data-bs-toggle="tooltip" title="List View">
                                    <i class="bi bi-list-ul"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="row g-2 plant-grid-view" id="plantGrid">
                        @if (Model.PlantsInfor != null && Model.PlantsInfor.Any())
                        {
                            foreach (var plant in Model.PlantsInfor)
                            {
                                <div class="col-md-6 col-lg-3 plant-item">
                                    <div class="card plant-card h-100">
                                        <div class="plant-card-image-wrapper">
                                            <img src="@plant.ThumbnailUrl" class="card-img-top" alt="@plant.PlantName">
                                            @* <div class="plant-card-overlay">
                                                <span class="quick-view-badge">Quick View</span>
                                            </div> *@
                                        </div>
                                        <div class="card-body">
                                            <h5 class="card-title">@plant.PlantName</h5>
                                            <p class="scientific-name">@plant.ScientificName</p>
                                            <div class="plant-badges mb-3">
                                                <span class="badge bg-success">@plant.CategoryName</span>
                                            </div>
                                            <button class="btn btn-outline-success btn-sm w-100 view-detail-btn"
                                                    data-plant-id="@plant.PlantId">
                                                <i class="bi bi-eye me-2"></i>View Details
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="col-12">
                                <div class="no-results">
                                    <i class="bi bi-search"></i>
                                    <h4>No plants found</h4>
                                    <p class="text-muted">Try adjusting your filters or search criteria</p>
                                </div>
                            </div>
                        }
                    </div>

                    @await Html.PartialAsync("_Pagination", Model.PlantsInfor, new ViewDataDictionary(ViewData) {
                    { "RouteName", "/Plants" }
                                        })
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/@@eonasdan/tempus-dominus@6.10.4/dist/js/tempus-dominus.min.js"></script>
    <script src="~/js/plants.js"></script>

    <!-- Popup for login required -->
    <div id="loginPopup" class="custom-modal-backdrop" style="display:none;">
        <div class="custom-modal-dialog">
            <div class="custom-modal-header">
                <h5><i class="bi bi-person-lock me-2 text-danger"></i> Login Required</h5>
                <button type="button" class="custom-modal-close" onclick="closeLoginPopup()">&times;</button>
            </div>
            <div class="custom-modal-body">
                <p class="mb-2">You need to log in to view plant details.</p>
                <p class="text-muted small">Please log in with your account to continue.</p>
            </div>
            <div class="custom-modal-footer">
                <a id="loginPopupLink" href="/Account/Login" class="btn btn-success px-4">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Log In
                </a>
                <button type="button" class="btn btn-outline-secondary px-4" onclick="closeLoginPopup()">Close</button>
            </div>
        </div>
    </div>

<script>
    function closeLoginPopup() {
        document.getElementById("loginPopup").style.display = "none";
    }
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".view-detail-btn").forEach(function(btn) {
            btn.addEventListener("click", function(e) {
                e.preventDefault(); 
                var plantId = btn.getAttribute("data-plant-id");
                if (isUserLoggedIn) {
                    window.location.href = "/PlantDetail?id=" + plantId;
                } else {
                    var loginLink = document.getElementById("loginPopupLink");
                    loginLink.href = "/Account/Login?returnUrl=" + encodeURIComponent("/PlantDetail?id=" + plantId);
                    document.getElementById("loginPopup").style.display = "flex";
                }
            });
        });
    });
</script>
@await Html.PartialAsync("_Chatbox")
<script>
  window.currentSessionId = '@User.FindFirst("chat_session_id")?.Value';
</script>
</body>

</html>