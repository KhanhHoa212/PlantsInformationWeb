<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PlantsInformationWeb</title>

    <!-- Styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="@Html.Raw("https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js")"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Tempus Dominus CSS -->
    <link href="https://cdn.jsdelivr.net/npm/@@eonasdan/tempus-dominus@6.7.19/dist/css/tempus-dominus.min.css"
        rel="stylesheet">
    <link rel="stylesheet" href="~/PlantsInformationWeb.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
            <div class="container" >
                <a class="navbar-brand d-flex align-items-center" asp-page="/Index">
                    <i class="bi bi-flower1 text-success me-2 fs-3"></i>
                    <span class="fw-bold text-success">Plant Lookup</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" asp-page="/Index">Home</a>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                        {
                            <li class="nav-item">
                            <a class="nav-link" asp-page="/Admin/Dashboard">Dashboard</a>
                            </li>
                        }
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                Plant Categories
                            </a>
                            <ul class="dropdown-menu" data-bs-auto-close="true">
                                <li>
                                    <a class="dropdown-item" asp-page="/Plants" asp-route-category="flowers">Flowers</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-page="/Plants" asp-route-category="trees">Trees</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-page="/Plants" asp-route-category="herbs">Herbs</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-page="/Plants"
                                        asp-route-category="vegetables">Vegetables</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                Regions
                            </a>
                            <ul class="dropdown-menu" data-bs-auto-close="true">
                                <li>
                                    <a class="dropdown-item" asp-page="/Plants"
                                        asp-route-category="tropical">Tropical</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-page="/Plants"
                                        asp-route-category="temperate">Temperate</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-page="/Plants" asp-route-category="arid">Arid</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/CareGuides">Care Guides</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/References">References</a>
                        </li>
                    </ul>

                    <!-- Search Bar -->
                    <form class="d-flex me-3" style="width: 300px;">
                        <div class="input-group">
                            <input class="form-control" type="search" placeholder="Search plants..." id="searchInput">
                            <button class="btn btn-outline-success" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </form>

                    <!-- User Account -->
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <div class="d-inline position-relative">
                            <button id="userButton" class="btn btn-sm btn-outline-success fw-bold">
                                @User.Identity.Name
                            </button>

                            <div id="userDropdown" class="dropdown-menu shadow" style="display: none;">
                                <form method="post" asp-page="/Account/Logout">
                                    <button type="submit" class="dropdown-item text-danger">Logout</button>
                                </form>
                            </div>
                        </div>
                    }
                    else
                    {
                        <a class="nav-link d-inline text-muted" asp-area="" asp-page="/Account/Login">Login</a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="main-container py-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    @if (ViewBag.HideFooter == null || ViewBag.HideFooter == false)
    {
        <footer class="bg-dark text-white py-5">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 mb-4">
                        <h5 class="fw-bold mb-3">
                            <i class="bi bi-flower1 text-success me-2"></i>
                            Plant Lookup
                        </h5>
                        <p class="text-white">Your comprehensive resource for plant information, care guides, and botanical
                            knowledge.</p>
                        <div class="social-links">
                            <a href="#" class="text-white me-3"><i class="bi bi-facebook"></i></a>
                            <a href="#" class="text-white me-3"><i class="bi bi-twitter"></i></a>
                            <a href="#" class="text-white me-3"><i class="bi bi-instagram"></i></a>
                            <a href="#" class="text-white"><i class="bi bi-youtube"></i></a>
                        </div>
                    </div>
                    <div class="col-md-2 mb-4">
                        <h6 class="fw-bold mb-3">Quick Links</h6>
                        <ul class="list-unstyled">
                            <li><a asp-page="/Index" class="text-white text-decoration-none">Home</a></li>
                            <li><a asp-page="/Plants" class="text-white text-decoration-none">Plants</a></li>
                            <li><a asp-page="/CareGuides" class="text-white text-decoration-none">Care Guides</a></li>
                            <li><a asp-page="/References" class="text-white text-decoration-none">References</a></li>
                        </ul>
                    </div>
                    <div class="col-md-3 mb-4">
                        <h6 class="fw-bold mb-3">Categories</h6>
                        <ul class="list-unstyled">
                            <li>
                                <a asp-page="/Plants" asp-route-category="flowers"
                                    class="text-white text-decoration-none">Flowers</a>
                            </li>
                            <li>
                                <a asp-page="/Plants" asp-route-category="trees"
                                    class="text-white text-decoration-none">Trees</a>
                            </li>
                            <li>
                                <a asp-page="/Plants" asp-route-category="herbs"
                                    class="text-white text-decoration-none">Herbs</a>
                            </li>
                            <li>
                                <a asp-page="/Plants" asp-route-category="vegetables"
                                    class="text-white text-decoration-none">Vegetables</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-md-3 mb-4">
                        <h6 class="fw-bold mb-3">Contact Info</h6>
                        <p class="text-white mb-2">
                            <i class="bi bi-envelope me-2"></i>
                            info@plantlookup.com
                        </p>
                        <p class="text-white mb-2">
                            <i class="bi bi-phone me-2"></i>
                            +1 (555) 123-4567
                        </p>
                        <p class="text-white">
                            <i class="bi bi-geo-alt me-2"></i>
                            FPT Software, Ngũ Hành Sơn, Đà Nẵng
                        </p>
                    </div>
                </div>
                <hr class="my-4">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <p class="text-white mb-0">&copy; 2024 Plant Lookup. All rights reserved.</p>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <a href="#" class="text-white text-decoration-none me-3">Privacy Policy</a>
                        <a href="#" class="text-white text-decoration-none">Terms of Service</a>
                    </div>
                </div>
            </div>
        </footer>
    }
    <!-- Scripts -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>