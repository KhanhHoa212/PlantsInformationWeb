@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

<style>
    body {
        background: linear-gradient(135deg, #e8f5e9 0%, #a5d6a7 100%);
        min-height: 100vh;
        font-family: 'Segoe UI', 'Roboto', Arial, sans-serif;
    }

    .card.plant-theme {
        border: none;
        border-radius: 18px;
        box-shadow: 0 6px 24px 0 rgba(76, 175, 80, 0.12);
        background: #f1f8e9;
    }

    .plant-icon {
        color: #43a047;
        background: linear-gradient(135deg, #aed581 60%, #43a047 100%);
        border-radius: 50%;
        padding: 12px;
        margin-bottom: 8px;
        box-shadow: 0 2px 12px -4px #43a04766;
    }

    .btn-plant {
        background: linear-gradient(90deg, #388e3c 50%, #8bc34a 100%);
        color: #fff;
        border: none;
        font-weight: 600;
        transition: background 0.18s, box-shadow 0.18s;
    }

    .btn-plant:hover {
        background: linear-gradient(90deg, #43a047 60%, #aed581 100%);
        box-shadow: 0 2px 12px -4px #388e3c66;
        color: #fff;
    }

    .form-label {
        color: #388e3c;
        font-weight: 500;
    }

    .invalid-feedback, .text-danger {
        color: #d32f2f;
    }

    .back-link {
        color: #43a047 !important;
        font-weight: 500;
        text-decoration: none;
        transition: color 0.18s;
    }

    .back-link:hover {
        color: #1b5e20 !important;
        text-decoration: underline;
    }

    .min-vh-100 {
        min-height: 85vh !important;
    }

 
</style>

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="card plant-theme shadow" style="max-width: 400px; width: 100%;">
        <div class="card-body">
            <div class="text-center mb-4">
                <i class="bi bi-flower1 fs-1 plant-icon"></i>
                <h3 class="card-title mb-1" style="color:#388e3c">Reset Password</h3>
                <p class="text-muted small mb-0">
                    Please enter your new password below. Make sure it is strong and secure.
                </p>
            </div>
            <form method="post" novalidate>
                <div class="mb-3">
                    <label asp-for="NewPassword" class="form-label">New Password</label>
                    <input asp-for="NewPassword" type="password" class="form-control @(ViewData.ModelState["NewPassword"]?.Errors.Count > 0 ? "is-invalid" : "")" autocomplete="new-password" />
                    <div class="invalid-feedback">
                        @ViewData.ModelState["NewPassword"]?.Errors.FirstOrDefault()?.ErrorMessage
                    </div>
                </div>
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control @(ViewData.ModelState["ConfirmPassword"]?.Errors.Count > 0 ? "is-invalid" : "")" autocomplete="new-password" />
                    <div class="invalid-feedback">
                        @ViewData.ModelState["ConfirmPassword"]?.Errors.FirstOrDefault()?.ErrorMessage
                    </div>
                </div>
                <button type="submit" class="btn btn-plant w-100">
                    <i class="bi bi-key me-1"></i> Update Password
                </button>
            </form>
            <div class="mt-3 text-center">
                <a href="/Account/Login" class="back-link small">
                    <i class="bi bi-arrow-left"></i> Back to Login
                </a>
            </div>
        </div>
    </div>
</div>